{
  "name": "rdk",
  "description": "Reality Development Kit, a unified React-first XR engine",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "clean": "turbo clean",
    "test": "turbo test",
    "knip": "knip-bun --tags=-knipignore",
    "release": "bun run --cwd packages/rdk build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "knip": "^5.66.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
